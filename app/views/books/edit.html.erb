<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %><% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
       <%= message %><
      <% end %>
<% end %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit 'update Book' %><br>
 <% end %>


<%= link_to "show", book_path(@book) %>
<%= link_to 'back',books_path %>