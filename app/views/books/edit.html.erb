<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<h3><%= pluralize(@book.errors.count, "error") %></h3>

	<% @book.errors.full_messages.each do |message| %>
       <%= message %><br>
      <% end %>
<% end %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %><br>
 <% end %>


<%= link_to "show", book_path(@book) %>
<%= link_to 'back',books_path(@book)%>